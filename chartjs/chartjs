({
    line: function(args, opt) {
        args = args || {};
        var wrapper = require('./lib');
        wrapper("line", args.width, args.height, args.labels, args.datasets, null, args.options);
    },
    bar: function(args, opt) {
        args = args || {}
        var wrapper = require('./lib');
        wrapper('bar', args.width, args.height, args.labels, args.datasets, null, args.options);
    },
    radar: function(args, opt) {
        args = args || {}
        var wrapper = require('./lib');
        wrapper('radar', args.width, args.height, args.labels, args.datasets, null, args.options);
    },
    polarArea: function(args, opt) {
        args = args || {}
        var wrapper = require('./lib');
        wrapper('polarArea', args.width, args.height, null, null, args.data, args.options);
    },
    pie: function(args, opt) {
        args = args || {}
        var wrapper = require('./lib');
        wrapper('pie', args.width, args.height, null, null, args.data, args.options);
    },
    doughnut: function(args, opt) {
        args = args || {}
        var wrapper = require('./lib');
        wrapper('doughnut', args.width, args.height, null, null, args.data, args.options);
    }
});
