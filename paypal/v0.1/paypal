({
	auth:function(){return auth({provider:'paypal'})},
	'Pay': function(args, opts) {
		var url = 'https://svcs.sandbox.paypal.com/AdaptivePayments/Pay'
		args = args || {}
		return http({provider:'paypal',url:url,method:'POST',params:args}, opts)
	},
